---
export interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  primaryBtn?: {
    text: string;
    href: string;
  };
  secondaryBtn?: {
    text: string;
    href: string;
  };
  features?: string[];
}

const {
  title = "Ready to Dominate Your Market?",
  subtitle = "Join Sydney Businesses Getting Real Results",
  description = "Stop losing customers to competitors. Start your journey to digital dominance today with a free strategy consultation.",
  primaryBtn = {
    text: "Get Your Free $997 Strategy Session →",
    href: "#contact"
  },
  secondaryBtn = {
    text: "Or Call Now: 0487 286 451",
    href: "tel:0487286451"
  },
  features = [
    "✅ No lock-in contracts",
    "✅ 100% transparent reporting",
    "✅ Proven results in 30 days",
    "✅ Local Sydney team"
  ]
} = Astro.props;
---

<section class="cta section animate-on-scroll" id="cta">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">{title}</h2>
      <p class="cta-subtitle">{subtitle}</p>
      <p class="cta-description">{description}</p>

      <div class="cta-features">
        {features.map((feature) => (
          <span class="cta-feature">{feature}</span>
        ))}
      </div>

      <div class="cta-buttons">
        <a href={primaryBtn.href} class="btn btn-primary btn-lg">
          {primaryBtn.text}
        </a>
        <a href={secondaryBtn.href} class="btn btn-secondary btn-lg">
          {secondaryBtn.text}
        </a>
      </div>

      <p class="cta-urgency">
        <i class="fas fa-fire"></i> Only accepting 5 new clients this month
      </p>
    </div>
  </div>
</section>

<style>
  .cta {
    background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
    color: white;
    padding: 80px 0;
    text-align: center;
  }

  .cta-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: white;
  }

  .cta-subtitle {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .cta-description {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0.85;
  }

  .cta-features {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .cta-feature {
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 25px;
    font-size: 0.95rem;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1.1rem;
  }

  .cta-urgency {
    font-size: 0.95rem;
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .cta-title {
      font-size: 2rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn-lg {
      width: 100%;
      max-width: 300px;
    }
  }
</style>