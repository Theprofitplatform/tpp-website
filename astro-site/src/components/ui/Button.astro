---
export interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'cta' | 'premium-cta';
  size?: 'sm' | 'md' | 'lg' | 'xl';
  href?: string;
  target?: string;
  rel?: string;
  ariaLabel?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  class?: string;
  icon?: string;
  iconPosition?: 'left' | 'right';
}

const {
  variant = 'primary',
  size = 'md',
  href,
  target,
  rel,
  ariaLabel,
  type = 'button',
  disabled = false,
  class: additionalClass = '',
  icon,
  iconPosition = 'left'
} = Astro.props;

const baseClasses = 'btn inline-flex items-center justify-center font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2';

const variantClasses = {
  primary: 'btn-primary bg-blue-600 hover:bg-blue-700 text-white focus:ring-blue-500',
  secondary: 'btn-secondary bg-gray-600 hover:bg-gray-700 text-white focus:ring-gray-500',
  outline: 'btn-outline border-2 border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white focus:ring-blue-500',
  ghost: 'btn-ghost text-blue-600 hover:bg-blue-50 focus:ring-blue-500',
  cta: 'btn-cta bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white shadow-lg hover:shadow-xl transform hover:scale-105',
  'premium-cta': 'btn premium-cta-btn premium-cta-glow'
};

const sizeClasses = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-2 text-base',
  lg: 'px-6 py-3 text-lg',
  xl: 'px-8 py-4 text-xl'
};

const className = [
  baseClasses,
  variantClasses[variant],
  sizeClasses[size],
  additionalClass
].join(' ');

const Element = href ? 'a' : 'button';
---

<Element
  class={className}
  href={href}
  target={target}
  rel={rel}
  aria-label={ariaLabel}
  type={href ? undefined : type}
  disabled={href ? undefined : disabled}
>
  {icon && iconPosition === 'left' && <i class={`${icon} mr-2`} aria-hidden="true"></i>}
  <slot />
  {icon && iconPosition === 'right' && <i class={`${icon} ml-2`} aria-hidden="true"></i>}
  {variant === 'premium-cta' && <div class="premium-cta-glow"></div>}
</Element>