---

<BaseLayout title={title} description={description}>
  <style>
    .hero {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 120px 0 80px;
      position: relative;
      overflow: hidden;
    }

    .floating-shape {
      position: absolute;
      border-radius: 50%;
      opacity: 0.1;
      animation: float 20s infinite ease-in-out;
    }

    .shape-1 {
      width: 400px;
      height: 400px;
      background: white;
      top: -200px;
      right: -100px;
    }

    .shape-2 {
      width: 300px;
      height: 300px;
      background: white;
      bottom: -150px;
      left: -100px;
      animation-delay: -5s;
    }

    @keyframes float {
      0%, 100% { transform: translate(0, 0) rotate(0deg); }
      25% { transform: translate(20px, -30px) rotate(90deg); }
      50% { transform: translate(-20px, 20px) rotate(180deg); }
      75% { transform: translate(30px, 10px) rotate(270deg); }
    }

    .hero-content {
      position: relative;
      z-index: 1;
      text-align: center;
      color: white;
    }

    .badge {
      display: inline-block;
      background: rgba(255, 255, 255, 0.2);
      padding: 8px 20px;
      border-radius: 20px;
      margin-bottom: 20px;
      font-weight: 600;
    }

    .hero h1 {
      font-size: clamp(2.5rem, 5vw, 3.5rem);
      margin-bottom: 20px;
      font-weight: 900;
    }

    .hero p {
      font-size: 1.25rem;
      opacity: 0.95;
      max-width: 600px;
      margin: 0 auto 40px;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 30px;
      padding: 80px 0;
    }

    .stat-card {
      text-align: center;
      padding: 30px;
      background: white;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      transition: transform 0.3s ease;
    }

    .stat-card:hover {
      transform: translateY(-5px);
    }

    .stat-number {
      font-size: 3rem;
      font-weight: 900;
      background: linear-gradient(135deg, #667eea, #764ba2);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .stat-label {
      color: #64748b;
      font-size: 1.1rem;
      margin-top: 10px;
    }

    .story-section {
      background: #f8fafc;
      padding: 80px 0;
    }

    .story-card {
      background: white;
      padding: 60px;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
      max-width: 900px;
      margin: 0 auto;
    }

    .story-card h2 {
      font-size: 2.5rem;
      margin-bottom: 30px;
      background: linear-gradient(135deg, #667eea, #764ba2);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .story-card p {
      font-size: 1.15rem;
      line-height: 1.8;
      color: #475569;
      margin-bottom: 20px;
    }

    .values-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 30px;
      padding: 80px 0;
    }

    .value-card {
      background: white;
      padding: 40px;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      transition: all 0.3s ease;
    }

    .value-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(103, 126, 234, 0.2);
    }

    .value-icon {
      font-size: 3rem;
      margin-bottom: 20px;
    }

    .value-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 15px;
      color: #1e293b;
    }

    .value-description {
      color: #64748b;
      line-height: 1.6;
    }

    .team-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 40px;
      padding: 80px 0;
    }

    .team-card {
      text-align: center;
      padding: 40px 30px;
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      transition: transform 0.3s ease;
    }

    .team-card:hover {
      transform: translateY(-10px);
    }

    .team-avatar {
      font-size: 4rem;
      margin-bottom: 20px;
    }

    .team-name {
      font-size: 1.3rem;
      font-weight: 700;
      margin-bottom: 10px;
      color: #1e293b;
    }

    .team-role {
      color: #667eea;
      font-weight: 500;
    }

    .timeline-section {
      background: #f8fafc;
      padding: 80px 0;
    }

    .timeline {
      max-width: 900px;
      margin: 0 auto;
      position: relative;
    }

    .timeline::before {
      content: '';
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      width: 2px;
      height: 100%;
      background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .timeline-item {
      display: flex;
      align-items: center;
      margin-bottom: 60px;
      position: relative;
    }

    .timeline-item:nth-child(odd) {
      flex-direction: row-reverse;
    }

    .timeline-content {
      background: white;
      padding: 30px;
      border-radius: 16px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
      width: 45%;
    }

    .timeline-year {
      font-size: 1.5rem;
      font-weight: 900;
      background: linear-gradient(135deg, #667eea, #764ba2);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 10px;
    }

    .timeline-event {
      color: #475569;
      line-height: 1.6;
    }

    .timeline-dot {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      width: 20px;
      height: 20px;
      background: white;
      border: 4px solid #667eea;
      border-radius: 50%;
      z-index: 1;
    }

    .cta-section {
      background: linear-gradient(135deg, #1e293b, #334155);
      padding: 100px 0;
      text-align: center;
      color: white;
    }

    .cta-section h2 {
      font-size: clamp(2rem, 4vw, 3rem);
      margin-bottom: 20px;
      font-weight: 900;
    }

    .cta-section p {
      font-size: 1.25rem;
      opacity: 0.9;
      margin-bottom: 40px;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    @media (max-width: 768px) {
      .timeline::before {
        left: 30px;
      }

      .timeline-item {
        flex-direction: column !important;
        margin-left: 60px;
      }

      .timeline-content {
        width: 100%;
      }

      .timeline-dot {
        left: 30px;
      }

      .story-card {
        padding: 40px 30px;
      }
    }
  </style>

  <!-- Hero Section -->
  <section class="hero">
    <div class="floating-shape shape-1"></div>
    <div class="floating-shape shape-2"></div>
    <div class="container hero-content">
      <span class="badge">Sydney's Trusted Marketing Partner</span>
      <h1>We're The Profit Platform</h1>
      <p>Your growth-obsessed digital marketing team dedicated to delivering exceptional ROI through data-driven strategies and innovative solutions</p>
      <div style="display: flex; gap: 20px; justify-content: center; flex-wrap: wrap;">
        <a href="/contact" class="btn btn-primary" style="background: white; color: #667eea;">Get Started Today</a>
        <a href="/portfolio" class="btn btn-secondary" style="border-color: white; color: white;">View Our Work</a>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="container">
    <div class="stats-grid">
      {stats.map((stat) => (
        <div class="stat-card">
          <div class="stat-number">{stat.number}</div>
          <div class="stat-label">{stat.label}</div>
        </div>
      ))}
    </div>
  </section>

  <!-- Our Story -->
  <section class="story-section">
    <div class="container">
      <div class="story-card">
        <h2>Our Story</h2>
        <p>
          Founded in 2019, The Profit Platform emerged from a simple vision: to make enterprise-level digital marketing accessible to businesses of all sizes. We noticed a gap in the Sydney market - businesses needed more than just marketing services; they needed a true partner invested in their growth.
        </p>
        <p>
          What started as a small team with big ambitions has grown into Sydney's most trusted digital marketing agency. We've helped over 150 businesses transform their online presence, generating millions in revenue through strategic, data-driven campaigns.
        </p>
        <p>
          Today, we're not just service providers - we're growth partners. Every strategy we develop, every campaign we launch, and every optimization we make is driven by one goal: delivering exceptional ROI for our clients.
        </p>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="container">
    <h2 class="gradient-text" style="text-align: center; font-size: 2.5rem; margin-bottom: 60px;">Our Values</h2>
    <div class="values-grid">
      {values.map((value) => (
        <div class="value-card">
          <div class="value-icon">{value.icon}</div>
          <h3 class="value-title">{value.title}</h3>
          <p class="value-description">{value.description}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Team Section -->
  <section class="container">
    <h2 class="gradient-text" style="text-align: center; font-size: 2.5rem; margin-bottom: 60px;">Meet Our Team</h2>
    <div class="team-grid">
      {team.map((member) => (
        <div class="team-card">
          <div class="team-avatar">{member.avatar}</div>
          <h3 class="team-name">{member.name}</h3>
          <p class="team-role">{member.role}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Timeline Section -->
  <section class="timeline-section">
    <div class="container">
      <h2 class="gradient-text" style="text-align: center; font-size: 2.5rem; margin-bottom: 80px;">Our Journey</h2>
      <div class="timeline">
        {timeline.map((item) => (
          <div class="timeline-item">
            <div class="timeline-content">
              <div class="timeline-year">{item.year}</div>
              <p class="timeline-event">{item.event}</p>
            </div>
            <div class="timeline-dot"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <h2>Ready to Grow Your Business?</h2>
      <p>Join 150+ successful businesses that trust The Profit Platform with their digital growth</p>
      <a href="/contact" class="btn btn-primary" style="font-size: 1.2rem; padding: 20px 40px;">
        Start Your Success Story
      </a>
    </div>
  </section>
</BaseLayout>