  { name: "Michael Chen", role: "Head of Performance Marketing", avatar: "üë®‚Äçüíª" },
  { name: "Emily Rodriguez", role: "Creative Director", avatar: "üë©‚Äçüé®" },
  { name: "David Kim", role: "Technical Lead", avatar: "üë®‚Äçüîß" }
];

