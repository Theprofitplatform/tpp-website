  { year: "2019", event: "Founded The Profit Platform with a mission to democratize digital marketing" },
  { year: "2020", event: "Expanded team and launched comprehensive SEO services" },
  { year: "2021", event: "Achieved Google Partner status and opened Sydney office" },
  { year: "2022", event: "Launched proprietary conversion optimization framework" },
