  { icon: "ü§ù", title: "Transparent Partnership", description: "No hidden fees, clear reporting, and honest communication" },
  { icon: "üöÄ", title: "Innovation First", description: "Staying ahead with the latest digital marketing technologies" },
  { icon: "üéØ", title: "Client-Centric", description: "Your success is our success - we're invested in your growth" },
  { icon: "‚ö°", title: "Agile & Adaptive", description: "Quick to respond, ready to pivot, always optimizing" },
  { icon: "üèÜ", title: "Excellence Standard", description: "We don't settle for good enough - only exceptional results" }
];

